<Window
    x:Class="YourNamespace.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PerfectoMetApp" Height="400" Width="600"
    Background="LightGray">
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkRed"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Red"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border BorderThickness="1" BorderBrush="Black">
                            <Grid Name="TabPanel">
                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabPanel" Property="Background" Value="Gray" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="TabPanel" Property="Background" Value="LightGray" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image x:Name="Header" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" 
               Source="/PERFECTO-MET_logo.jpg" Stretch="Uniform" MaxHeight="200" MaxWidth="600"/>

        <TabControl x:Name="MyTabControl" Grid.Row="1" Margin="10" Background="#D3D3D3" BorderBrush="Black" BorderThickness="1">
            <TabItem Header="Aktywne" Background="#D3D3D3">
                <StackPanel Cursor="">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                        <ListView x:Name="ActiveTasksListView" SelectionChanged="ActiveTasksListView_SelectionChanged" Background="#FFDFDFDF">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Horizontal" Background="{Binding BackgroundColor}">
                                            <TextBlock Text="{Binding Name}" Margin="5"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>

                    <Border x:Name="InfoPanel" Background="#FF2D2D30" Visibility="Collapsed" Margin="5" Padding="10">
                        <StackPanel Cursor="">
                            <TextBlock Text="Informacje:" Foreground="White" />
                            <TextBlock x:Name="OptionalDataTextBlock" Foreground="White" />

                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Cursor="">
                                <Button Content="Otwórz folder" Click="OpenFolderButton_Click" 
                    Style="{StaticResource ModernButtonStyle}" Width="120" Height="30" Cursor="Hand" />
                                <Button Content="Zakończ" Click="CompleteButton_Click" 
Style="{StaticResource ModernButtonStyle}" Width="80" Height="30" Cursor="Hand"/>
                                <Button Content="Edytuj" Click="EditButton_Click" 
                    Style="{StaticResource ModernButtonStyle}" Width="60" Height="30" />

                                <Button Content="Usuń" Click="DeleteButton_Click" 
                    Style="{StaticResource ModernButtonStyle}" Width="60" Height="30" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="Priorytet:      " Foreground="White"/>
                                <CheckBox x:Name="PriorityCheckBox" Checked="PriorityCheckBox_Checked" Unchecked="PriorityCheckBox_Unchecked"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="">
                                <TextBlock x:Name="PlaceholderTextBlock" Text="Wpisz zadanie"
Foreground="Gray" VerticalAlignment="Bottom" Margin="5" IsHitTestVisible="False" 
Visibility="Collapsed" HorizontalAlignment="Center"/>
                            <!-- TextBox do wprowadzania zadania -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                    <!-- TextBox do wprowadzania zadania -->
                                    <TextBox x:Name="TaskListTextBox" Width="300" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="" />

                                    <!-- Przycisk "Wyślij" -->
                                    <Button Content="Wyślij" Click="SendTaskButton_Click" 
            Style="{StaticResource ModernButtonStyle}" Width="150" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="Hand"/>
                                </StackPanel>



                                <!-- TextBlock jako placeholder -->
                            
                            
                                <!-- Miejsce na wyświetlanie listy zadań -->
                                <ListBox x:Name="TaskListBox" Width="500" Height="200" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="" Background="LightGray">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">

                                                <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="5"/>
                                                <Button Content="Usuń" Click="DeleteElementButton_Click" Style="{StaticResource ModernButtonStyle}" Width="45" Height="25" Margin="5"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                            
                        </StackPanel>
                    </Border>





                </StackPanel>
            </TabItem>
            <TabItem Header="Zakończone" Background="#D3D3D3">
                <StackPanel>
                    <TextBlock Text="Zakończone zlecenia" Margin="10"/>
                    <ListView x:Name="CompletedTasksListView" Margin="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Name}" Width="200" />
                                <GridViewColumn Header="Folder" DisplayMemberBinding="{Binding FolderPath}" Width="300" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>

        <Button Content="Dodaj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" 
                Style="{StaticResource ModernButtonStyle}" Click="OpenForm_Click" Width="60" Height="30"/>

        <Border x:Name="FormPanel" Background="#FF2D2D30" Visibility="Collapsed" CornerRadius="10" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Padding="20">
            <StackPanel>
                <TextBlock Text="Formularz" FontSize="24" Foreground="White" Margin="0,0,0,10" FontWeight="Bold"/>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Nazwa:" Foreground="White"/>
                    <TextBox x:Name="NameTextBox" Margin="0,5,0,10" Height="30" Background="#FF1E1E1E" Foreground="White" BorderBrush="Transparent" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Data zakończenia:" Foreground="White"/>
                    <DatePicker x:Name="DatePicker" Margin="0,5,0,10" Background="#FF1E1E1E" Foreground="Black" BorderBrush="Transparent" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Imię (opcjonalne):" Foreground="White"/>
                    <TextBox x:Name="FirstNameTextBox" Margin="0,5,0,10" Height="30" Background="#FF1E1E1E" Foreground="White" BorderBrush="Transparent" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Nazwisko (opcjonalne):" Foreground="White"/>
                    <TextBox x:Name="LastNameTextBox" Margin="0,5,0,10" Height="30" Background="#FF1E1E1E" Foreground="White" BorderBrush="Transparent" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Adres (opcjonalny):" Foreground="White"/>
                    <TextBox x:Name="AddressTextBox" Margin="0,5,0,10" Height="30" Background="#FF1E1E1E" Foreground="White" BorderBrush="Transparent" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Numer telefonu (opcjonalny):" Foreground="White"/>
                    <TextBox x:Name="PhoneNumberTextBox" Margin="0,5,0,10" Height="30" Background="#FF1E1E1E" Foreground="White" BorderBrush="Transparent" Padding="5"/>
                </StackPanel>

                <Button Content="Zapisz" Background="Black" Foreground="White" Style="{StaticResource ModernButtonStyle}" Margin="0,20,0,0" Height="35" Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
